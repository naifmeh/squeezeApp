<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/trainNetworkCoordinator"
    tools:context=".activities.TrainNetworkActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/trainNetworkConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/trainNetworkAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar
                app:theme="@style/ToolbarColoredBackArrow"
                android:id="@+id/trainNetworkToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/Base.ThemeOverlay.AppCompat.ActionBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

        <TextView
            android:id="@+id/trainActTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-thin"
            android:text="Pictures picker"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trainNetworkAppBarLayout" />

        <android.support.v7.widget.CardView
            android:id="@+id/pictureContainerCardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trainActTitle">

            <GridLayout
                android:id="@+id/gridViewTrainNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:columnCount="4"
                android:columnWidth="75dp"
                android:gravity="center"
                android:rowCount="4">

                <ImageView
                    android:id="@+id/firstImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/secondImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/thirdImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/fourthImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/fifthImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/sixthImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/seventhImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/eightImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/ninthImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/tenthImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/eleventhImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />

                <ImageView
                    android:id="@+id/twelfthImageTrain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_24px" />


            </GridLayout>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/namePicturesInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pictureContainerCardView">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/namePictureEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fullNameLabel"
                android:shadowColor="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <com.github.ybq.android.spinkit.SpinKitView

            android:id="@+id/sendImagesProgrss"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:SpinKit_Color="@color/colorAccent"
            app:layout_constraintBottom_toTopOf="@+id/trainButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namePicturesInputLayout" />

        <Button
            android:id="@+id/trainButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/trainNetwork"
            android:tint="@color/buttonTextColor"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/labelTextColor"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </android.support.constraint.ConstraintLayout>



</android.support.design.widget.CoordinatorLayout>
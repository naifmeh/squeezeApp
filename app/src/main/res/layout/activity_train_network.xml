<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/trainNetworkCoordinator"
    tools:context=".activities.TrainNetworkActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/trainNetworkConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/trainNetworkAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/trainNetworkToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/Base.ThemeOverlay.AppCompat.ActionBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/pictureContainerCardView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trainNetworkAppBarLayout">

            <GridLayout
                android:id="@+id/gridViewTrainNetwork"
                android:layout_width="match_parent"
                android:rowCount="4"
                android:columnCount="4"
                android:columnWidth="75dp"
                android:gravity="center"
                android:layout_height="match_parent">

            </GridLayout>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/namePicturesInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pictureContainerCardView">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/namePictureEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fullNameLabel"
                android:shadowColor="@color/labelTextColor"
                android:textColor="@color/labelTextColor"
                android:textColorHighlight="@color/labelTextColor"
                android:textColorHint="@color/labelTextColor" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/trainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trainNetwork"
            android:tint="@color/buttonTextColor"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/labelTextColor"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </android.support.constraint.ConstraintLayout>



</android.support.design.widget.CoordinatorLayout>